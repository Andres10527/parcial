<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andres.calculadora.MainActivity"
    android:background="#FBF8EF"
    tools:background="#FBF8EF">


    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/num0"
        android:layout_toEndOf="@+id/num0"
        android:layout_marginStart="9dp"
        android:id="@+id/punto"
        android:textSize="40sp"
        android:onClick="punto" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num0"
        android:layout_alignStart="@+id/num0"
        android:layout_marginBottom="7dp"
        android:id="@+id/num1"
        android:textSize="40sp"
        android:onClick="num_1" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/num1"
        android:layout_alignStart="@+id/punto"
        android:id="@+id/num2"
        android:textSize="40sp"
        android:onClick="num_2" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num1"
        android:layout_alignEnd="@+id/num1"
        android:id="@+id/num4"
        android:textSize="40sp"
        android:onClick="num_4" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num2"
        android:layout_alignStart="@+id/num2"
        android:id="@+id/num5"
        android:textSize="40sp"
        android:onClick="num_5" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num4"
        android:layout_alignStart="@+id/num4"
        android:layout_marginBottom="7dp"
        android:id="@+id/num7"
        android:textSize="40sp"
        android:onClick="num_7" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/num7"
        android:layout_alignEnd="@+id/num5"
        android:id="@+id/num8"
        android:textSize="40sp"
        android:onClick="num_8" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="74dp"
        android:id="@+id/num0"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="num_0" />

    <Button
        android:text="limpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/punto"
        android:textSize="35sp"
        android:layout_alignStart="@+id/punto"
        android:id="@+id/limpiar"
        android:layout_toStartOf="@+id/suma"
        android:onClick="limpiar" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num6"
        android:textSize="40sp"
        android:onClick="num_6"
        android:layout_above="@+id/num3"
        android:layout_toStartOf="@+id/multip"
        android:layout_marginEnd="6dp" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num3"
        android:textSize="40sp"
        android:onClick="num_3"
        android:layout_alignBaseline="@+id/num2"
        android:layout_alignBottom="@+id/num2"
        android:layout_alignStart="@+id/num6" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/igual"
        android:textSize="40sp"
        android:layout_above="@+id/limpiar"
        android:layout_alignStart="@+id/num3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/Resultado"
        android:background="#FFFFFF"

        android:gravity="right"
        android:textSize="70sp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/num7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num9"
        android:textSize="40sp"
        android:onClick="num_9"
        android:layout_below="@+id/Resultado"
        android:layout_alignStart="@+id/num6" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/suma"
        android:textSize="40sp"
        android:onClick="suma"
        android:layout_above="@+id/limpiar"
        android:layout_alignStart="@+id/resta" />

    <Button
        android:text="รท"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/division"
        android:textSize="40sp"
        android:onClick="division"
        android:layout_below="@+id/Resultado"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multip"
        android:textSize="40sp"
        android:onClick="multiplicacion"
        android:layout_above="@+id/resta"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resta"
        android:textSize="40sp"
        android:onClick="resta"
        android:layout_alignBaseline="@+id/num3"
        android:layout_alignBottom="@+id/num3"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
